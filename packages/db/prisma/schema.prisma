generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String           @id @default(uuid())
  email         String           @unique
  name          String?
  passwordHash  String? // Optional to support both password and OAuth
  avatar        String?
  githubId      String?          @unique
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  projects      Project[]
  conversations AIConversation[]
  aiUsage       AIUsage[]
  activities    Activity[]

  @@index([email])
}

model Project {
  id            String           @id @default(uuid())
  name          String
  repoUrl       String
  framework     String           @default("nextjs")
  userId        String
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  deployments   Deployment[]
  domains       Domain[]
  buildConfig   BuildConfig?
  conversations AIConversation[]
  codeAnalyses  CodeAnalysis[]
  activities    Activity[]
  usages        ProjectUsage[]

  @@unique([userId, repoUrl])
  @@index([userId])
}

model Deployment {
  id             String            @id @default(uuid())
  projectId      String
  project        Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  commitSha      String
  commitMessage  String?
  branch         String            @default("main")
  status         String            @default("queued") // queued, building, ready, error
  buildLogs      String?           @db.Text
  deploymentUrl  String?
  s3Key          String?
  errorMessage   String?           @db.Text
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  domains        Domain[]
  fixSuggestions AIFixSuggestion[]
  codeAnalysis   CodeAnalysis?

  @@index([projectId])
  @@index([status])
}

model Domain {
  id           String      @id @default(uuid())
  domain       String      @unique
  projectId    String
  project      Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  deploymentId String?
  deployment   Deployment? @relation(fields: [deploymentId], references: [id], onDelete: SetNull)
  verified     Boolean     @default(false)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([projectId])
}

model BuildConfig {
  id             String   @id @default(uuid())
  projectId      String   @unique
  project        Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  buildCommand   String   @default("npm run build")
  installCommand String   @default("npm install")
  outputDir      String   @default(".next")
  nodeVersion    String   @default("18")
  envVars        Json? // Store as JSON
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// ============================================
// AI-Native DevOps Models
// ============================================

model AIConversation {
  id        String      @id @default(uuid())
  projectId String
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId    String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String?
  messages  AIMessage[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@index([projectId])
  @@index([userId])
}

model AIMessage {
  id             String         @id @default(uuid())
  conversationId String
  conversation   AIConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String // "user" | "assistant" | "system"
  content        String         @db.Text
  tokens         Int?
  createdAt      DateTime       @default(now())

  @@index([conversationId])
}

model AIFixSuggestion {
  id           String     @id @default(uuid())
  deploymentId String
  deployment   Deployment @relation(fields: [deploymentId], references: [id], onDelete: Cascade)
  errorMessage String     @db.Text
  suggestion   String     @db.Text
  fixedCode    String?    @db.Text
  confidence   Float      @default(0.7)
  status       String     @default("pending") // pending, applied, dismissed
  prUrl        String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([deploymentId])
  @@index([status])
}

model CodeAnalysis {
  id              String           @id @default(uuid())
  deploymentId    String           @unique
  deployment      Deployment       @relation(fields: [deploymentId], references: [id], onDelete: Cascade)
  projectId       String
  project         Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  analysisType    String           @default("genius-ai")
  score           Float?
  recommendations Recommendation[]
  metrics         Json?
  status          String           @default("analyzing")
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([projectId])
  @@index([deploymentId])
}

model Recommendation {
  id              String       @id @default(uuid())
  analysisId      String
  analysis        CodeAnalysis @relation(fields: [analysisId], references: [id], onDelete: Cascade)
  category        String // performance, security, best-practices, bundle-size
  severity        String // low, medium, high, critical
  title           String
  description     String       @db.Text
  suggestion      String       @db.Text
  affectedFiles   String[]
  estimatedImpact String?
  status          String       @default("open")
  createdAt       DateTime     @default(now())

  @@index([analysisId])
  @@index([category])
  @@index([severity])
}

model AIUsage {
  id           String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  feature      String // auto-fixer, brain-tab, genius-ai
  model        String
  inputTokens  Int
  outputTokens Int
  cost         Float
  createdAt    DateTime @default(now())

  @@index([userId])
  @@index([feature])
}
model ProjectUsage {
  id            String   @id @default(uuid())
  projectId     String
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  requests      Int      @default(0)
  bandwidth     BigInt   @default(0) // bytes
  invocations   Int      @default(0)
  date          DateTime @default(now())

  @@unique([projectId, date])
  @@index([projectId])
}

model Activity {
  id        String   @id @default(uuid())
  type      String   // deployment, project, settings, security, domain
  action    String   // created, updated, deleted, deployed, blocked
  target    String   // name of the project, domain, etc.
  metadata  String?  // additional info (branch name, commit sha, etc.)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([projectId])
  @@index([type])
}
