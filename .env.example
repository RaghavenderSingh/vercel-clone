# Root Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to git!

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=vercel_clone
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_database_password_here

# Database URL for application services
# NOTE: For docker-compose, use postgres as host. For local dev, use localhost
DATABASE_URL="postgresql://postgres:your_secure_database_password_here@postgres:5432/vercel_clone"

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://redis:6379

# =============================================================================
# AWS Credentials (REQUIRED)
# =============================================================================
# WARNING: Never commit these to git! Use IAM roles in production!
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
S3_BUCKET=your-s3-bucket-name

# =============================================================================
# Security Secrets (REQUIRED)
# =============================================================================
# Generate secure random strings (minimum 32 characters)
# Linux/Mac: openssl rand -base64 32
# Windows: Use a secure password generator
JWT_SECRET=generate_random_string_min_32_chars
NEXTAUTH_SECRET=generate_different_random_string_min_32_chars
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# GitHub OAuth Configuration (REQUIRED for GitHub login)
# =============================================================================
GITHUB_CLIENT_ID=your_github_oauth_app_id
GITHUB_CLIENT_SECRET=your_github_oauth_app_secret

# =============================================================================
# Frontend URLs
# =============================================================================
FRONTEND_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3000
INTERNAL_API_URL=http://api-server:3000
NEXTAUTH_URL=http://localhost:3001

# =============================================================================
# Docker Configuration
# =============================================================================
DOCKER_SOCKET_PATH=/var/run/docker.sock

# =============================================================================
# Optional Configuration
# =============================================================================
REQUEST_HANDLER_DOMAIN=localhost:3002
NODE_ENV=development

# =============================================================================
# SECURITY CHECKLIST:
# =============================================================================
# [ ] Generated strong random JWT_SECRET (32+ chars)
# [ ] Generated strong random NEXTAUTH_SECRET (32+ chars)
# [ ] Set strong POSTGRES_PASSWORD (16+ chars, mixed case, numbers, symbols)
# [ ] Configured GitHub OAuth app and added credentials
# [ ] Set up AWS S3 bucket and IAM user with limited permissions
# [ ] Never committed .env file to git (check .gitignore)
# [ ] Rotated all exposed credentials from SECURITY_ALERT.md
# =============================================================================
