# Root Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to git!

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=vercel_clone
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_database_password_here

# Database URL for application services
# IMPORTANT: Choose the right URL for your environment:
# - Local development: postgresql://postgres:postgres@localhost:5432/vercel_clone
# - Docker Compose: postgresql://postgres:your_password@postgres:5432/vercel_clone
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/vercel_clone"

# =============================================================================
# Redis Configuration
# =============================================================================
# IMPORTANT: Choose the right URL for your environment:
# - Local development: redis://localhost:6379
# - Docker Compose: redis://redis:6379
REDIS_URL=redis://localhost:6379

# =============================================================================
# AWS Credentials (REQUIRED)
# =============================================================================
# WARNING: Never commit these to git! Use IAM roles in production!
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
S3_BUCKET=your-s3-bucket-name
CLOUDFRONT_DOMAIN=your_cloudfront_domain

# =============================================================================
# Security Secrets (REQUIRED)
# =============================================================================
# Generate secure random strings (minimum 32 characters)
# Linux/Mac: openssl rand -base64 32
# Windows: Use a secure password generator
JWT_SECRET=generate_random_string_min_32_chars
NEXTAUTH_SECRET=generate_different_random_string_min_32_chars
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# GitHub OAuth Configuration (REQUIRED for GitHub login)
# =============================================================================
GITHUB_CLIENT_ID=your_github_oauth_app_id
GITHUB_CLIENT_SECRET=your_github_oauth_app_secret

# =============================================================================
# Service URLs
# =============================================================================
# Frontend/Dashboard URL
FRONTEND_URL=http://localhost:3001
NEXTAUTH_URL=http://localhost:3001

# API Server URLs
NEXT_PUBLIC_API_URL=http://localhost:3000
API_URL=http://localhost:3000
INTERNAL_API_URL=http://api-server:3000

# Request Handler Domain
REQUEST_HANDLER_DOMAIN=localhost:8000

# =============================================================================
# Docker Configuration
# =============================================================================
DOCKER_SOCKET_PATH=/var/run/docker.sock

# =============================================================================
# AI-Native DevOps Configuration (Phase 2+)
# =============================================================================
# Enable AI Auto-Fixer Bot
ENABLE_AI_FIXER=true

# AI Provider: claude or gemini
AI_PROVIDER=gemini

# Google Gemini API Key (get from: https://aistudio.google.com/apikey)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Anthropic Claude API Key (get from: https://console.anthropic.com/)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Override default models
CLAUDE_MODEL=claude-3-5-sonnet-20241022
GEMINI_MODEL=gemini-2.5-flash

# =============================================================================
# Service Ports
# =============================================================================
# API Server
PORT=3000

# Dashboard (Next.js)
# PORT=3001  # Set automatically by dev script

# Request Handler
# PORT=8000  # Set automatically by dev script

# =============================================================================
# Optional Configuration
# =============================================================================
NODE_ENV=development

# =============================================================================
# SECURITY CHECKLIST:
# =============================================================================
# [ ] Generated strong random JWT_SECRET (32+ chars)
# [ ] Generated strong random NEXTAUTH_SECRET (32+ chars)
# [ ] Set strong POSTGRES_PASSWORD (16+ chars, mixed case, numbers, symbols)
# [ ] Configured GitHub OAuth app and added credentials
# [ ] Set up AWS S3 bucket and IAM user with limited permissions
# [ ] Never committed .env file to git (check .gitignore)
# [ ] Rotated all exposed credentials from SECURITY_ALERT.md
# =============================================================================
